<div class="col-8 offset-2">
  <h3><i class="fa fa-check-square-o" aria-hidden="true"></i> Approve Chefs</h3>
  <hr/>
  <table class="table table-borderless">
    <thead>
      <tr>
        <th>S.No:</th>
        <th>Chef Name</th>
        <th>Food Store</th>
        <th>Phone</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @chef.each_with_index do |chef,i|%>
      <tr>
        <td><%= i+1 %></td>
        <td><%= chef.name %></td>
        <td><%= chef.food_store.name %></td>
        <td><%= chef.phone %></td>
        <td>
          <a class="btn btn-info btn-sm px-3" href="chef/<%= chef.id %>/approve" role="button" title="Approve Chef">
            <i class="fa fa-check" aria-hidden="true"></i> Approve
          </a>
        </td>
      </tr>      
    <% end %>
    </tbody>
  </table>  
  <hr/>
  <div class="text-center"><a class="btn btn-secondary  px-4" href="/dashboard" role="button" title="back">Back</a></div>  
</div>