<div class="col-8 offset-2">
  <h3>Approve Chefs</h3>
  <hr>
  <table class="table table-borderless">
    <thead>
      <tr>
        <th>S.No:</th>
        <th>Chef Name</th>
        <th>Food Store</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
    <% @chef.each_with_index do |chef,i|%>
      <tr>
        <td><%= i+1 %></td>
        <td><%= chef.name %></td>
        <td><%= chef.food_store.name %></td>
        <td><%= chef.phone %></td>
        <td><%= link_to "approve", approve_employee_path(employee.id) %></td>
      </tr>      
    <% end %>
    </tbody>
  </table>      
  <a class="btn btn-primary" href="/dashboard" role="button">Back</a>
</div>