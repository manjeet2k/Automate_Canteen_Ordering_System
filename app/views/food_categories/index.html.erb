<div class="col-8 offset-2">
  <table class="table table-borderless">
    <thead>
      <tr>
        <th>S.No:</th>
        <th>Category Name</th>
      </tr>
    </thead>
    <tbody>
    <% @category.each_with_index do |category,i|%>
      <tr>
        <td><%= i+1 %></td>
        <td><%= category.name %></td>
        <td>
          <%= 
            link_to "Edit", edit_food_category_path(category.id),
            class: "btn btn-primary btn-sm"
          %>
        </td>
        <td>
          <%= link_to "Delete",food_category_path(category.id), 
            data: { method: :Delete, confirm: "Are you sure ?"},
            class: "btn btn-danger btn-sm"
          %>
        </td>
      </tr>
      
    <% end %>
    </tbody>
  </table>
  
      
  <a class="btn btn-primary" href="/food_categories/new" role="button">New Category</a>
</div>