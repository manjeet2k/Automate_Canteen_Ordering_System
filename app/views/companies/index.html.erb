<div class="col-8 offset-2">
  <h3><i class="fa fa-building" aria-hidden="true"></i> Companies</h3>
  <hr/>
  <table class="table table-borderless">
    <thead>
      <tr>
        <th>S.No:</th>
        <th>Company Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @company.each_with_index do |company,i|%>
      <tr>
        <td><%= i+1 %></td>
        <td><%= company.name %></td>
        <td>
          <a class="btn btn-info btn-sm px-3" href="<%= company.id%>/edit" role="button" title="Edit Company">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
          <a class="btn btn-danger btn-sm px-3" href="<%= company.id%>" data-confirm="Are you sure?" data-method="delete" role="button" title="Delete Company">
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      
    <% end %>
    </tbody>
  </table>
  <hr/>
  <div class="text-center"><a class="btn btn-primary px-4" href="/companies/new" role="button" title="Create new company">New Company</a></div>
      
  
</div>