<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card ">
      <div class="card-header text-center">
        <h3><%= @profile.name.titleize %></h3>
      </div>

      <div class="card-body text-center">
        <p><b>Phone:</b> <%= @profile.phone%></p>
        <% if current_user.chef? || (current_user.admin? && @profile.user.chef?) %>
          <p><b>Food Store:</b> <%= @profile.food_store.name %> </p>
        <% elsif current_user.employee? || (current_user.admin? && @profile.user.employee?) %>
          <p><b>Company:</b> <%= @profile.company.name %> </p>  
        <% end %>        
      </div>
    </div>
  </div>
</div>