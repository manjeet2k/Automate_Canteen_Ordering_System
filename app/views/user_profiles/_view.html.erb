<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card ">
      <div class="card-header text-center">
        <h3><%= @profile.name.titleize %></h3>
      </div>

      <div class="card-body text-center">
        <p><b>Phone:</b> <%= @profile.phone%></p>
        <% if current_user.chef? || current_user.admin? %>
          <p><b>Food Store:</b> <%= @profile.food_store.name %> </p>
        <% elsif current_user.employee? || current_user.admin? %>
          <p><b>Company:</b> <%= @profile.company.name %> </p>  
        <% end %>        
      </div>
    </div>
    <% if current_user.admin? %>
      <div class="row justify-content-center my-4">
        <div class="col-2">
          <strong><%= link_to "Approve", approve_chef_path(@profile.id), class: "btn btn-secondary btn-md btn-block my-2 my-sm-0" if @profile.user.chef?%></strong>
          <strong><%= link_to "Approve", approve_employee_path(@profile.id), class: "btn btn-secondary btn-md btn-block my-2 my-sm-0" if @profile.user.employee?%></strong>
        </div>
        <div class="col-2">
          <strong><%= link_to "Back", chef_profiles_path, class: "btn btn-secondary btn-md btn-block my-2 my-sm-0" if @profile.user.chef? %></strong>
          <strong><%= link_to "Back", employee_profiles_path, class: "btn btn-secondary btn-md btn-block my-2 my-sm-0" if @profile.user.employee? %></strong>
        </div>
      </div>
    <% end %>
  </div>
</div>