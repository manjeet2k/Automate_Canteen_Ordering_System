<div class="col-6 offset-3">
  <h3><i class="fa fa-cutlery" aria-hidden="true"></i> Food Stores</h3>
  <hr/>
  <table class="table table-borderless">
    <thead>
      <tr>
        <th>S.No:</th>
        <th>Food Store Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @store.each_with_index do |store,i|%>
      <tr>
        <td><%= i+1 %></td>
        <td><%= store.name %></td>
        <td>
          <%= edit_link(edit_food_store_path(store.id)) %>
          <%= delete_link(food_store_path(store.id)) %>
        </td>
      </tr>      
    <% end %>
    </tbody>
  </table>  
  <hr/>
  <div class="text-center">
    <%= link_to "New Food Store", new_food_store_path, class: "btn btn-primary px-3", title: "add new food store" %>
  </div>
</div>