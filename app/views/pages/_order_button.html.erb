<% unless !obj.food_store.indexing? || current_user.chef? || current_user.admin? || ( current_user.employee? && !current_user.employee_profile.approved?) %>
  <%= form_for CartItem.new, url: carts_add_path do |f| %>
    <%= f.hidden_field :food_item_id, value: obj.id %>
    <div class="form-group row">
      <%= f.label :quantity, for: "quantity", class:"col-sm-3 col-form-label" %>
      <div class="col-sm-3">
        <%= f.number_field :quantity, value: 1, min: 1, max: 5, class: "form-control"%>
      </div>
      <%= f.submit "Add to Cart", class: "btn btn-primary"%>
    </div>
  <% end %>
<% end %>